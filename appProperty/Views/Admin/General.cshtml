@model appProperty.Models.GeneralViewModel
@{ ViewData["Title"] = "General";
                Layout = "_LayoutHome"; }

<!-- Page Title-->
<div class="page-title">
    <div class="container">
        <div class="column">
            <h1>General</h1>
        </div>
        <div class="column">
            <ul class="breadcrumbs">
                <li>
                    <a href="index.html">Home</a>
                </li>
                <li class="separator">&nbsp;</li>
                <li>
                    <a href="account-orders.html">Admin</a>
                </li>
                <li class="separator">&nbsp;</li>
                <li>General</li>
            </ul>
        </div>
    </div>
</div>
<!-- Page Content-->
<div class="container padding-bottom-3x mb-2">
    <div class="row">
        <div class="col-lg-12">
            <div class="padding-top-2x mt-2 hidden-lg-up"></div>
            <form class="row" method="post" asp-action="General">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="KindCode"></label>
                        <select class="form-control" asp-for="KindCode" name="KindCode">
                            @if (ViewBag.Kind != null)
                            {
                @foreach (var item in ViewBag.Kind)
                {
<option value="@item.Code">@item.Description</option>}}
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="custom-control custom-checkbox d-block" asp-for="Used" style="padding: 4%;">
                            <input class="custom-control-input" type="checkbox" asp-for="Used"><span class="custom-control-indicator" style="top: 1.5rem;"></span><span class="custom-control-description">Used</span>
                        </label>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input class="form-control" type="text" asp-for="Description">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="DependsOn"></label>
                        <input class="form-control" type="text" asp-for="DependsOn" required>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Start"></label>
                        <input class="form-control" type="text" asp-for="Start">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="End"></label>
                        <input class="form-control" type="text" asp-for="End">
                    </div>
                </div>
                <div class="col-12">
                    <hr class="mt-2 mb-3">
                    <div class="d-flex flex-wrap justify-content-between align-items-center">
                        <a class="btn btn-primary margin-right-none" href="/Home/Index">Return</a>
                        <button class="btn btn-primary margin-right-none" type="Submit">Record</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

